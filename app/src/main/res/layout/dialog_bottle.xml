<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type (breastmilk/formula)"/>

    <RadioGroup
        android:layout_marginTop="10dp"
        android:layout_marginBottom="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/rgBottle">

        <RadioButton
            android:id="@+id/rbBreast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Breastmilk" />

        <RadioButton
            android:layout_marginLeft="20dp"
            android:id="@+id/rbFormula"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Formula" />
    </RadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Amount in mL"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="quantity (mL)"
        android:id="@+id/etBottleQty"
        android:inputType="number"
        />

</LinearLayout>